{
    "compilerOptions": {
        "outDir": "build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // "isolatedModules": false,
        // "declaration": true,
        "lib": ["dom", "es6"],
        "module": "commonjs", 
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": false,
        "target": "es2016"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_module"
    ]

}