{
    "compilerOptions": {

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "lib": ["dom", "es6"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": false,
        "target": "es2016"
    },
    "include": [
        "src/*", "src/*/*"
    ],
    "exclude": [
        "node_module"
    ]

}